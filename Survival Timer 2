/*This script is to show the player how long they have been alive for. It is editing a text component in the game , and changing it to display the score, which is the time
the player has been alive for.*/


using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class Timer : MonoBehaviour
{
    public float timePlayed = 0f; //creates the variable for the timer and sets the timer to 0

    public Text timerText;    //Allows me to add the text component so it can be edited by the script
    // Start is called before the first frame update
    void Start()
    {
        timePlayed = 0f; //Sets the timer to 0.1
        
    }

    // Update is called once per frame
    void Update()
    {
        
        if (timePlayed > -1f)
        {
            timePlayed += Time.deltaTime;
            int finalTime = Mathf.RoundToInt(timePlayed);
            timerText.text = "Score: " + finalTime.ToString();
        }
    } //This if loop is much more efficient than the first version (less code for the same task)


}
